<%- layout("/layouts/boilerplate.ejs") %>
<body>
<div class="row">
    <div class="col-8 offset-2">
    <br><br>
    <h1>Create a new Listing</h1>
    <form  
        method="POST" 
        action="/listings" 
        novalidate 
        class="needs-validation" 
        enctype="multipart/form-data"
    >
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]"
                   type="text"
                   class="form-control"
                   required
             />
             <div class="valid-feedback">title looks good!</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>                                                                                                                                    orm-label">Description</label>
            <textarea name="listing[description]" class="form-control"  required></textarea>
            <div class="invalid-feedback">Description should be short</div>
        </div>
    
        <div class="m b-3">
            <label for="image" class="form-label">Upload ListinfImage</label>
            <input
                name="listing[image]" 
                class="form-control" 
                type="file"
            >
        </div>
         
        <div class="row">
            <div class="mb-3 col-md-4">
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]"  class="form-control" type="number">
                    <div class="invalid-feedback">Price should be valid</div>
                </div>
            </div>

            <div class="mb-3 col-md-8">
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" class="form-control"  type="text"  required>
                    <div class="invalid-feedback">country  name should be valid</div>
                </div>
            </div>    
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" class="form-control" type="text"   required>
            <div class="invalid-feedback">location name should be valid</div>
        </div>
        
        <br><br>
        <button class="btn btn-dark add-btn">Add</button>

        <br><br><br>
    
    </form>
  </div>
</div>
</body>